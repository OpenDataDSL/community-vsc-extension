{
	"name": "opendatadsl-community",
	"publisher": "Walkfares",
	"displayName": "OpenDataDSL Community",
	"license": "LGPL",
	"icon": "logo.png",
	"description": "The development environment for OpenDataDSL (Community Version)",
	"version": "0.2.0",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/OpenDataDSL/community-vsc-extension"
	},
	"activationEvents": [
		"onLanguage:odsl"
	],
	"main": "./out/extension",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"keywords": [
		"odsl",
		"MongoDB"
	],
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"command": "odsl.debugEditorContents",
					"when": "resourceLangId == odsl",
					"group": "1_run@20"
				},
				{
					"command": "odsl.debugODSLRegion",
					"when": "resourceLangId == odsl",
					"group": "1_run@20"
				},
				{
					"command": "odsl.runSelectedText",
					"when": "resourceLangId == odsl",
					"group": "1_run@20"
				}
			]
		},
		"languages": [
			{
				"id": "odsl",
				"aliases": [
					"OpenDataDSL",
					"odsl"
				],
				"extensions": [
					".odsl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "odsl",
				"scopeName": "source.odsl",
				"path": "./syntaxes/odsl.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "odsl",
				"path": "./snippets/odsl.json"
			}
		],
		"commands": [
			{
				"command": "odsl.debugEditorContents",
				"title": "Debug Editor Contents",
				"icon": "$(debug-alt)"
			},
			{
				"command": "odsl.debugODSLRegion",
				"title": "Debug Region",
				"icon": "$(debug-alt)"
			},
			{
				"command": "odsl.runSelectedText",
				"title": "Run Selected Text",
				"icon": "logo.png"
			}
		],
		"configuration": {
			"title": "ODSL Community Version",
			"properties": {
				"odsl.c.port": {
					"type": "integer",
					"default": 8006,
					"description": "Port to connect to the ODSL process"
				},
				"odsl.c.mongodb": {
					"type": "string",
					"default": "mongodb://localhost:27017",
					"description": "The default MongoDB connection string used for the 'private' source"
				}
			}
		},
		"breakpoints": [
			{
				"language": "odsl"
			}
		],
		"debuggers": [
			{
				"type": "odsl",
				"label": "ODSL Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "odsl",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "ODSL Debug: Launch",
						"description": "A new configuration for 'debugging' an OpenDSL script.",
						"body": {
							"type": "odsl",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.odsl.getProgramName"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:build": "vsce package -o build.vsix",
		"vscode:publish": "vsce publish patch",
		"vscode:publishMinor": "vsce publish minor",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"is-port-reachable": "^3.0.0",
		"mxgraph": "^4.2.0",
		"shelljs": "^0.8.4",
		"vscode-debugadapter": "^1.41.1",
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/node": "^14.0.23",
		"@types/vscode": "^1.1.37",
		"typescript": "^3.9.10"
	}
}
